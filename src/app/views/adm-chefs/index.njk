{% extends "extend.njk" %}

{% block content %}

    <div class="title">
        <h2>Gerenciar Chefs</h2>
    </div>

    <div class="cards-chefs">
        {% for chef in chefs %}
            <div class="card-chef">
                <div class="avatar-chef" style="background: url({{chef.avatar_url}}) 50% 50% no-repeat"></div>
                <div class="name-chef">
                    <p>{{chef.name}}</p>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}