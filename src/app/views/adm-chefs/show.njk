{% extends "extend.njk" %}

{% block content %}

    <div class="chef-header">
        <h2>Chef: {{ chef.name }}</h2>
        <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
    </div>

    <div class="chef-show">
        <div class="chef-show-avatar" style="background: url({{ chef.avatar_url }}) 50% 50% no-repeat"></div>
        <h2>{{ chef.name }}</h2>
        <p>{{ chef.total_recipes }} receita(s)</p>
    </div>

    <div class="chef-recipes">
        <h2>Receitas</h2>
        <div class="chef-cards">
            {% for recipe in recipes %}
                <div class="chef-card">
                    <div class="div-recipe-image">
                        <img src="{{recipe.image}}" alt="{{recipe.title}}">
                    </div>
                    <div class="div-recipe-title">
                        <p>{{recipe.title}}</p>
                        <p>por {{chef.name}}</p>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>                   
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}