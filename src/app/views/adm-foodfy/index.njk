{% extends "extend.njk" %}

{% block content %}

    <div class="admin-index-title">
        <h2 class="index-title">Gerenciar receitas</h2>
        <a href="/admin/recipes/create">Criar receita</a>
    </div>

    <section class="section-index">

        {% for recipe in recipes %}

                <div class="card-index">
                    <div class="image-index">
                        <img src="{{recipe.image}}" alt="{{recipe.title}}">
                    </div>
                    <div class="content-index">
                        <p class="content-title">{{recipe.title}}</p>
                        <p class="content-author">por {{recipe.chef}}</p>
                        <a class="link-index" href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            
        {% endfor %}

    </section>

{% endblock %}

{% block scripts %}

    <script src="/admin.js"></script>

{% endblock %}