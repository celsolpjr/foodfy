{% extends "layout.njk" %}

{% block head %}
    <title>{{receipe.title}}</title>
{% endblock %}

{% block content %}
    <div class="details">
        <div class="details-image">
            <img src="{{receipe.image}}" alt="{{receipe.title}}">
        </div>
        <div class="details-title">
            <h2>{{receipe.title}}</h2>
        </div>
        <div class="details-author">
            <p>por {{receipe.author}}</p>
        </div>
        <div class="details-ingredients">
            <div class="title">
                <h2>Ingredientes</h2>
                <a class="view-1">Esconder</a>
            </div> 
            <ul class="content-1">
                {% for ingredient in receipe.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="details-preparation">
            <div class="title">
                <h2>Modo de preparo</h2>
                <a class="view-2">Esconder</a>
            </div>          
            <ul class="content-2">
                {% for item in receipe.preparation %}
                    <li>{{item}}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="details-information">
            <div class="title">
                <h2>Informações Adicionais</h2>
                <a class="view-3">Esconder</a>
            </div>  
            <p class="content-3">{{receipe.information}}</p>
        </div>
    </div>
{% endblock %}

{% block scripts %}

    <script src="/details.js"></script>

{% endblock %}